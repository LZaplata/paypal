<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">

	<meta name="description" content="{$desc}">
	<meta name="keywords" content="{$keywords}">
	<meta name="robots" content="{$robots}" n:ifset="$robots">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<title>{$title}{if $title_addition} | {$title_addition}{/if}</title>

	{control css}
	
	<link rel="shortcut icon" href="{$basePath}/favicon.ico" type="image/x-icon">
	<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

	{control js}	

	{if $vendorSettings}
		{if $vendorSettings->webmasterToolsVerification}
		<meta name="google-site-verification" content="{$vendorSettings->webmasterToolsVerification}" />
		{/if}
	
		{if $vendorSettings->analyticsUID}
		<script type="text/javascript">
			(function(i,s,o,g,r,a,m){ i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
			
			ga('create', {$vendorSettings->analyticsUID}, {$vendorSettings->analyticsURL});
			ga('require', 'linkid', 'linkid.js');
			ga('require', 'ecommerce', 'ecommerce.js');
			ga('send', 'pageview');
		</script>
		{/if}
		
		{if $vendorSettings->addthisActive && $vendorSettings->addthis}
		<!-- Go to www.addthis.com/dashboard to customize your tools -->
		<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid={$vendorSettings->addthis}" async="async"></script>
		{/if}
	{/if}
</head>

<body{if $vendorSettings->singlepage} id="singlepage" data-spy="scroll" data-target=".menu"{/if}>
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
		var js, fjs = d.getElementsByTagName(s)[0];
		if (d.getElementById(id)) return;
		js = d.createElement(s); js.id = id;
		js.src = "//connect.facebook.net/cs_CZ/sdk.js#xfbml=1&version=v2.5&appId=391221134311660";
		fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>

	{snippet flashMessages}
		{foreach $flashes as $flash}
			{if $flash->type == "popup"}
				{$flash->message}
			{else}
				<div class="alert alert-{$flash->type} alert-dismissible" role="alert">
					<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
					{$flash->message}
				</div>
			{/if}
		{/foreach}
	{/snippet}
	
	{if !$vendorSettings->singlepage}
		<div class="container-fluid" id="menu-wrapper">
		    <div class="container">
		        {control menu menu => 1, maxLevel => 1}

				<div class="pull-right">
					{control userbar}
				</div>
		    </div>
		</div>

		<div class="container-fluid" id="header">
			<div class="container">
				<div class="pull-left" id="logo">
					<p class="no-margin">
						<a href="{dlink :Front:Page:}">
							<img src="{$basePath}/images/logo.png" alt="logo" />
						</a>
					</p>
				</div>

				{control menu menu => 2}

				<div class="pull-right">
					<div class="pull-right">
						{control langs}
					</div>

					<div class="clearfix"></div>

					<div>
						<div class="pull-right">
							{control cart}
						</div>
						<div class="pull-right">
							{control search}
						</div>
					</div>
				</div>
			</div>
		</div>

		{if $homepage}
			<div class="wrapper" id="slider-wrapper">
				{control slider:articles 2}
			</div>

			<div class="clearfix"></div>

			<div class="container-fluid" id="news">
			    <div class="container">
				    {control articles 3}
			    </div>
			</div>

			<div class="container-fluid" id="advantages">
			    <div class="container">
			        <div class="row">
			            <div class="col-sm-3 advantage">
							<h3>Bez konzervantů</h3>
							<p class="text">
								Připraveno bez přídaných chemických látek a konzervantů.
							</p>
							<p class="text-center img">
								<img src="{$basePath}/images/advantage1.png" alt="">
							</p>
						</div>
			            <div class="col-sm-3 advantage">
							<h3>Trvanlivost 3 roky</h3>
							<p class="text">
								Můžete skladovat při teplotě do +30°C.
							</p>
							<p class="text-center img">
								<img src="{$basePath}/images/advantage1.png" alt="">
							</p>
						</div>
			            <div class="col-sm-3 advantage">
							<h3>Odolný obal</h3>
							<p class="text">
								Jídlo si můžete vzít všude s sebou a mít ho stále po ruce.
							</p>
							<p class="text-center img">
								<img src="{$basePath}/images/advantage1.png" alt="">
							</p>
						</div>
			            <div class="col-sm-3 advantage">
							<h3>Snadná příprava</h3>
							<p class="text">
								Stačí ohřát, přidat přílohu a můžete jíst.
							</p>
							<p class="text-center img">
								<img src="{$basePath}/images/advantage1.png" alt="">
							</p>
						</div>
			        </div>
			    </div>
			</div>
		{else}
			<div class="container-fluid" id="breadcrumb">
			    <div class="container">
			        {control breadcrumb}
			    </div>
			</div>
		{/if}

		<div class="container-fluid" id="content">
			{include #content}
		</div>

		{if $homepage}
			<div class="container-fluid" id="family">
			    <div class="container">
			        {control editor 14}
			    </div>
			</div>
			
			<div class="container-fluid" id="about">
			    <div class="container">
			        {control editor 15}
			    </div>
			</div>
		{/if}

		<div class="container-fluid" id="footer">
		    <div class="container">
		        <div class="row">
		            <div class="col-sm-3">
						<div class="fb-page" data-href="https://www.facebook.com/EXPRES-MENU-81899707155/?fref=ts" data-tabs="message" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"></div>
					</div>
		            <div class="col-sm-3">
						{control menu maxLevel => 1}
					</div>
		            <div class="col-sm-3">
						{control menu menu => 3, maxLevel => 1}
					</div>
		            <div class="col-sm-3">
						<p>
							<strong>&copy; EXPRES MENU, s.r.o.</strong><br>
							Lomní 355, 541 01 Trutnov
						</p>
						<p>
							<a href="mailto:info@expresmenu.com">info@expresmenu.com</a><br>
							+420 <strong>499 819 219</strong>
						</p>
						<p class="no-margin">
							<a href="http://www.hucr.cz" target="_blank">
								<img src="{$basePath}/images/signature.png" alt="Humlnet Creative, s.r.o. - E-shopy, firemní prezentace, reklamní grafika" />
							</a>
						</p>
					</div>
		        </div>
		    </div>
		</div>

		<div class="container-fluid" id="logos">
		    <div class="container">
		        <div class="row">
		            <div class="col-sm-3 gluten">
						<p class="no-margin h4">
							<img src="{$basePath}/images/gluten.png" alt=""> Vaříme bez lepku
						</p>
					</div>
					<div class="col-sm-6 imgs">
						<p class="no-margin text-center">
							<img src="{$basePath}/images/heureka.png" alt="">
							<img src="{$basePath}/images/czech-made.png" alt="">
							<img src="{$basePath}/images/yummy.png" alt="">
						</p>
					</div>
		        </div>
		    </div>
		</div>
	{else}
		<div class="container-fluid wrapper" data-spy="affix" id="header">
			<div class="container" id="logo">
				<p class="text-center">
					<a href="{dlink :Front:Page:}">
						<img src="{$basePath}/images/logo.png" alt="logo" />
					</a>
				</p>
			</div>
			
			<div class="container" id="menu">
				{control menu}
			</div>
		</div>
		
		{foreach $singlepagePages as $page}
			<div class="container-fluid clearfix" id="{$page->url}">
				<div class="container">
					{include Singlepage/layout$page->layout.latte page => $page}
				</div>
			</div>
		{/foreach}
	{/if}
</body>
</html>
